                        select.empty();
                        select.append($('<option/>', {
                            value: "", //0,
                            text: "--Select Employee--"
                        }));
                        //alert("deptId = " + deptId);
                        $.getJSON("../Tickets/getEmployee", { DeptRefId: deptId },
                            function (classesData) {
                                /*var select = $("#ddlEmp");
